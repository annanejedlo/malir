<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#000000"
    tools:context=".BadgesActivity">

    <Button
        android:id="@+id/TLACmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFFFFF"
        android:onClick="launchMenu"
        android:text="menu"
        android:textColor="#000000"
        android:textSize="35sp"
        app:cornerRadius="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#888888" />


    <LinearLayout
        android:id="@+id/LLVbadges"
        android:layout_width="411dp"
        android:layout_height="382dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TLACmenu">

        <LinearLayout
            android:id="@+id/LLHjedna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBadge1"
                android:layout_width="211dp"
                android:layout_height="500px"
                android:paddingLeft="35sp"
                android:paddingTop="20sp"
                android:paddingRight="35sp"
                app:srcCompat="@drawable/giacomo" />

            <ImageView
                android:id="@+id/imgBadge2"
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:paddingLeft="35sp"
                android:paddingTop="20sp"
                android:paddingRight="35sp"
                app:srcCompat="@drawable/fridabadge" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLHdva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBadge3"
                android:layout_width="211dp"
                android:layout_height="500px"
                android:paddingLeft="35sp"
                android:paddingTop="20sp"
                android:paddingRight="35sp"
                android:visibility="visible"
                app:srcCompat="@drawable/vinnie" />

            <ImageView
                android:id="@+id/imgBadge4"
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:paddingLeft="35sp"
                android:paddingTop="20sp"
                android:paddingRight="35sp"
                android:visibility="visible"
                app:srcCompat="@drawable/vladce" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:layout_weight="1"
        android:text="splň úroveň 1 na čtyři hvězdy"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TLACmenu" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:layout_weight="1"
        android:text="splň úroveň 2 na čtyři hvězdy"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TLACmenu" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginBottom="75dp"
        android:layout_weight="1"
        android:text="splň úroveň 3 na čtyři hvězdy"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/LLVbadges"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginBottom="70dp"
        android:layout_weight="1"
        android:text="splň všechny 3 úrovně"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/LLVbadges"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>